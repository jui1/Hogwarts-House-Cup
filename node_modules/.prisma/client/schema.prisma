// Prisma schema for Hogwarts House Points
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./hogwarts.db"
}

model HousePoint {
  id        String   @id @default(cuid())
  category  String // House name: Gryff, Slyth, Raven, Huff
  points    Int // Points awarded
  timestamp DateTime @default(now())

  @@map("house_points")
}
